@model List<EfDemoMvc.Models.tblProduct>
@{
    ViewBag.Title = "Index";
}

<h2>List of All Products </h2>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Price of the Product</th>.
        <th>Product Quality</th>
        <th>Product Image</th>
        <th>Operations</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.prod_id</td>
            <td>@item.prod_name</td>
            <td>@item.prod_price</td>
            <td>@item.prod_qty</td>
            <td>
                <img src="~/Content/images/@item.prod_pic" alt="@item.prod_name" width="100" height="100"/>
            </td>
            <td>
                <a href="@Url.Action("Edit","Default", new {@id = item.prod_id})" class="btn btn-success" onclick="return confirm(Are you sure to delete @item.prod_name ?)">Edit</a>
                <a href="@Url.Action("Delete","Default", new {@id = item.prod_id})" class="btn btn-success" onclick="return confirm(Are you sure to delete @item.prod_name ?)">Delete</a>
            </td>
        </tr>
    }
</table>
<a href="@Url.Action("Create","Default")" class="btn btn-primary">Click here to add a new element. </a>

